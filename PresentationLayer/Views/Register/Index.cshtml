@model PresentationLayer.Models.RegisterViewModel

@{
    ViewData["Title"] = "Înregistrare";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Name">Nume</label>
        <input asp-for="Name" class="form-control" placeholder="Introduceți numele dvs." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname">Prenume</label>
        <input asp-for="Surname" class="form-control" placeholder="Introduceți prenumele dvs." />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Introduceți adresa de email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserType">Tip Utilizator</label>
        <select asp-for="UserType" class="form-control" id="UserType">
            <option value="">Selectați tipul de utilizator</option>
            <option value="Student">Student</option>
            <option value="Teacher">Profesor</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>

    <div class="form-group" id="GroupField" style="display:none;">
        <label asp-for="Group">Grupa</label>
        <input asp-for="Group" class="form-control" placeholder="Introduceți grupa" />
        <span asp-validation-for="Group" class="text-danger"></span>
    </div>

    <div class="form-group" id="DisciplineField" style="display:none;">
        <label asp-for="Discipline">Disciplină</label>
        <input asp-for="Discipline" class="form-control" placeholder="Introduceți disciplina" />
        <span asp-validation-for="Discipline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Parolă</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Introduceți parola" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirmare Parolă</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmați parola" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Înregistrare</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    document.getElementById('UserType').addEventListener('change', function () {
        var userType = this.value;
        document.getElementById('GroupField').style.display = (userType === 'Student') ? 'block' : 'none';
        document.getElementById('DisciplineField').style.display = (userType === 'Teacher') ? 'block' : 'none';
    });
</script>
